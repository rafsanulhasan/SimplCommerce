@model SimplCommerce.Module.Core.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

@section featured {
    <partial name="~/Modules/SomplCommerce.Module.Core/Views/Shared/_WidgetInstances.cshtml" model="Model.WidgetInstances.Where(x => x.WidgetZoneId == WidgetZoneIds.HomeFeatured)"/>
}

<partial name="~/Modules/SomplCommerce.Module.Core/Views/Shared/_WidgetInstances.cshtml" model="Model.WidgetInstances.Where(x => x.WidgetZoneId == WidgetZoneIds.HomeMainContent)"/>

<partial name="~/Modules/SomplCommerce.Module.Core/Views/Shared/_WidgetInstances.cshtml" model="Model.WidgetInstances.Where(x => x.WidgetZoneId == WidgetZoneIds.HomeAfterMainContent)"/>
